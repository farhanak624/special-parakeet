<section>
    <div class="container pt-5">
        <div class="row col-4" >
            <a class="btn btn-success mt-3 mb-3 my-5" href="/admin/add-product">Add Product</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped" id="tablecontent">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Model</th>
                    <th scope="col">Storage</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Section 1</th>
                    <th scope="col">Section 2</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td scope="row">{{@index}}</td>
                    <td>{{this.Brand}}</td>
                    <td>{{this.Model}}</td>
                    <td>{{this.Storage}}</td>
                    <td>Rs: {{this.Price}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/images/product-images/{{this._id}}.jpg" alt="" srcset=""></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    {{!-- <td><a href="/admin/delete-product?id={{this._id}}&name=farhan" class="btn btn-danger">Delete</a></td> --}}
                    <td><a href="/admin/delete-product/{{this._id}}" 
                    class="btn btn-danger" 
                    onclick="return confirm('Are you sure you want to delete {{this.Brand}} {{this.Model}} ')">Delete</a>
                    </td>
                    

                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>
<script>
    $(function  () {
    $('#tablecontent').DataTable();
});
</script>